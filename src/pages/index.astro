---
import CoverLetter from "../components/cover-letter/CoverLetter.astro";
import Resume from "../components/resume/Resume.astro";
import { resumeData } from "../data/resume";
import ResumeLayout from "../layouts/ResumeLayout.astro";
---

<ResumeLayout title={`${resumeData.name} - Resume`}>
  <Resume 
    name={resumeData.name}
    contact={resumeData.contact}
    education={resumeData.education}
    experience={resumeData.experience}
    volunteerExperience={resumeData.volunteerExperience}
    skills={resumeData.skills}
    hobbies={resumeData.hobbies}
  />
  <CoverLetter 
    name={resumeData.name} 
    contact={resumeData.contact} 
    coverLetter={resumeData.coverLetter} 
  />
</ResumeLayout>
