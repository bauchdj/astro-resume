---
import type { VolunteerExperience as VolunteerExperienceType } from "../../types/resume";
import ResumeSection from "./ResumeSection.astro";

export interface Props {
	volunteerExperience: VolunteerExperienceType;
}

const { volunteerExperience } = Astro.props;

const volunteerItems = [volunteerExperience];

const getDate = (item: VolunteerExperienceType) =>
	`${item.startDate}â€“${item.endDate}`;

const getOrganization = (item: VolunteerExperienceType) => `<i>${item.organization}</i>`;

const getPosition = (item: VolunteerExperienceType) => item.position;

const getLocation = (item: VolunteerExperienceType) => item.location;

const getResponsibilities = (item: VolunteerExperienceType) =>
	item.responsibilities;
---

<ResumeSection 
  title="VOLUNTEER EXPERIENCE"
  items={volunteerItems}
  getDate={getDate}
  getOrganization={getOrganization}
  getPosition={getPosition}
  getLocation={getLocation}
  getResponsibilities={getResponsibilities}
/>
