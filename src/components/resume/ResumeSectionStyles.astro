---
// This file contains shared styles for resume sections
// Import this file in components that need these styles
---

<style>
  .resume-section {
    margin: 0.5rem 0;
  }

  h2 {
    font-weight: bold;
    margin: 0 0 0.25rem 0;
    font-size: 14pt;
  }

  hr {
    border: 0.5px solid #000;
    margin: 0.25rem 0;
  }

  .date {
    white-space: nowrap;
    padding-left: 6px;
  }

  .position-info {
    flex: 1;
  }

  .degree-info {
    flex: 1;
  }

  ul {
    margin: 0.5rem 0 0 0;
    padding-left: 25px;
  }

  li {
    margin: 0.25rem 0;
    line-height: 1.3;
  }

  .experience-header,
  .education-header,
  .volunteer-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .experience-item,
  .education-item,
  .volunteer-item {
    margin-bottom: 0.75rem;
  }

  .skills-table {
    width: 100%;
    border-collapse: collapse;
  }

  .skills-table td {
    text-align: left;
    vertical-align: top;
    padding: 2px 0;
  }

  .skills-table td:first-child {
    font-weight: bold;
    padding-right: 10px;
    white-space: nowrap;
  }
</style>
