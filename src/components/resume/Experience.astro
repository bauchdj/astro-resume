---
import type { ExperienceItem } from "../../types/resume";
import ResumeSection from "./ResumeSection.astro";

export interface Props {
	experience: ExperienceItem[];
}

const { experience } = Astro.props;

const getDate = (item: ExperienceItem) => `${item.startDate}â€“${item.endDate}`;

const getInfo = (item: ExperienceItem) =>
	`${item.position} | <i>${item.company}</i> | ${item.location}`;

const getResponsibilities = (item: ExperienceItem) => item.responsibilities;
---

<ResumeSection 
  title="EXPERIENCE"
  items={experience}
  getDate={getDate}
  getInfo={getInfo}
  getResponsibilities={getResponsibilities}
/>
