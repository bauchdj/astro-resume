---
import type { Education } from "../../types/resume";
import ResumeSection from "./ResumeSection.astro";

export interface Props {
	education: Education;
}

const { education } = Astro.props;

const educationItems = [education];

const getDate = (edu: Education) => edu.graduationDate;

const getOrganization = (edu: Education) => `${edu.school}`;

const getPosition = (edu: Education) =>
	`${edu.degree}, ${edu.emphasis}${edu.minor ? `, ${edu.minor}` : ""}`;

const getLocation = (edu: Education) => edu.location;

const getResponsibilities = (edu: Education) => [
	`GPA: ${edu.gpa} | ${edu.scholarship}`,
	`Relevant Coursework: ${edu.relevantCoursework.join(", ")}`,
];
---

<ResumeSection 
  title="EDUCATION"
  items={educationItems}
  getDate={getDate}
  getOrganization={getOrganization}
  getPosition={getPosition}
  getLocation={getLocation}
  getResponsibilities={getResponsibilities}
/>
