---
import type { Education as EducationType } from "../../types/resume";
import ResumeSection from "./ResumeSection.astro";

export interface Props {
	education: EducationType;
}

const { education } = Astro.props;

const educationItems = [education];

const getDate = (edu: EducationType) => edu.graduationDate;

const getInfo = (edu: EducationType) => 
  `${edu.degree}, ${edu.emphasis}${edu.minor ? `, ${edu.minor}` : ''} | <i>${edu.school}</i> | ${edu.location}`;

const getResponsibilities = (edu: EducationType) => [
  `GPA: ${edu.gpa} | ${edu.scholarship}`,
  `Relevant Coursework: ${edu.relevantCoursework.join(', ')}`
];
---

<ResumeSection 
  title="EDUCATION"
  items={educationItems}
  getDate={getDate}
  getInfo={getInfo}
  getResponsibilities={getResponsibilities}
/>
