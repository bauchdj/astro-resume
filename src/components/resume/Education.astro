---
import type { Education as EducationType } from "../../types/resume";
import ResumeHeader from "./ResumeHeader.astro";
import ResumeSectionStyles from "./ResumeSectionStyles.astro";

export interface Props {
	education: EducationType;
}

const { education } = Astro.props;
---

<section class="resume-section">
  <h2>EDUCATION</h2>
  <hr />
  <div class="education-item">
    <ResumeHeader 
      date={education.graduationDate} 
      info={`${education.degree}, ${education.emphasis}${education.minor ? `, ${education.minor}` : ''} | <i>${education.school}</i> | ${education.location}`}
      className="education-header"
    />
    <ul>
      <li>GPA: {education.gpa} | {education.scholarship}</li>
      <li>Relevant Coursework: {education.relevantCoursework.join(', ')}</li>
    </ul>
  </div>
</section>

<ResumeSectionStyles />
